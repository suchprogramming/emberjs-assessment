<div class="mail-header">
  <h1 class="inline-item">Your MailBox</h1>
  {{#link-to 'new-email' classNames="btn btn-primary inline-item-button"}}Create Email{{/link-to}}
</div>

<hr>
<div class="col-md-3 well">
  <h4>Folders:</h4>
  <ul class="blank">
    <li>Family</li>
    <li>Friends</li>
    <li>Work</li>
    <li>Bills</li>
    <li>Spam</li>
    <li>Trash</li>
  </ul>
</div>
<div class="col-md-9">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>From</th>
        <th>Subject</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      {{#each email in model}}
      <tr>
        <td> {{#link-to 'email' email}}{{email.sender}}{{/link-to}} </td>
        <td> {{email.subject}} </td>
        <td> {{email.date}} </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
